{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles defaults to sort by date in descending order",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "article_id": 1,
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "responds with the article when passed the articles id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 100,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "responds with all of the comments related to an article id default sorted by created_at ascending",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 5,
          "body": "I hate streaming noses",
          "votes": 0,
          "author": "icellusedkars",
          "article_id": 1,
          "created_at": "2018-05-30T15:59:13.341Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "responds with the posted comment when provided a username and a comment, and a valid article id",
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": 5,
        "body": "I hate streaming noses",
        "votes": 0,
        "author": "icellusedkars",
        "article_id": 1,
        "created_at": "2018-05-30T15:59:13.341Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "responds with the updated article when provided a votes value to increase by and a valid article id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 101,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/users": {
    "description": "responds with an array of all of the users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  },
  "delete /api/comments/:comment_id": {
    "description": "responds with no content when provided with a correct comment ID to delete",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/users/:username": {
    "description": "responds with a user object",
    "queries": [],
    "exampleResponse": {
      "user": {
        "username": "butter_bridge",
        "name": "jonny",
        "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
      }
    }
  }
}
